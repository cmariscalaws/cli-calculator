    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug FastAPI with UV",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "ENVIRONMENT": "development"
            },
            "python": "${workspaceFolder}/.venv/bin/python",
            "justMyCode": false
        },
        {
            "name": "Debug Services Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_services.py::TestServices::test_calculate_future_value_basic",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "ENVIRONMENT": "development"
            },
            "python": "${workspaceFolder}/.venv/bin/python",
            "justMyCode": false
        }
    ]
}